{
  "manifest_version": 2,

  "name": "Mute Inactive Tabs",
  "description": "An extension that mutes sound from tabs except the current tab that's playing sound.",
  "version": "1.0",
  "homepage_url": "https://github.com/arajajyothibabu/mute-inactive-tabs",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "256": "icon.png"
  },
  "browser_action": {
    "default_title": "Disable Mute Inactive Tabs"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [ {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"],
    "all_frames": true
  }]
}